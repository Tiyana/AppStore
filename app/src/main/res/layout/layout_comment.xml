<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:id="@+id/notification_actions_cardview_top_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="10sp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/cardview_corner_top"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10sp"
                android:paddingEnd="10sp">

                <ir.ac.iust.appstore.view.widget.CustomTextView
                    android:id="@+id/comment_author"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mohammad"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:lineSpacingExtra="5sp"
                    android:layout_marginStart="5sp"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/text_size_dimen_1"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="-2sp"
                    android:gravity="center"
                    >

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/comment_rating_bar"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="3.5"
                        />
                </LinearLayout>


                <ir.ac.iust.appstore.view.widget.CustomTextView
                    android:id="@+id/comment_date"
                    android:layout_weight="1"
                    android:layout_marginBottom="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019/11/23"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:lineSpacingExtra="5sp"
                    android:layout_marginEnd="5sp"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/text_size_dimen_1"
                    android:textStyle="bold"/>

            </LinearLayout>

            <ir.ac.iust.appstore.view.widget.CustomTextView
                android:id="@+id/comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:text="Great app, thank you!"
                android:layout_gravity="end"
                android:lineSpacingExtra="7sp"
                android:textColor="@color/gray_5"
                android:textSize="@dimen/text_size_dimen_1"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left">

                <ImageView
                    android:id="@+id/notification_actions_cardview_bottom_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="10sp"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:src="@drawable/cardview_corner_bottom"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
